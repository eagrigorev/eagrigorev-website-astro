{
  "extends": "astro/tsconfigs/base",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "allowJs": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/images/assets/*"],
      "@images/*": ["src/images/posts/*"],
      "@layouts/*": ["src/layouts/*"],
      // "@scripts/*": ["src/scripts/*"],
      "@styles/*": ["src/styles/*"]
      // "@utils/*": ["src/utils/*"]
    }
  }
}
