---
import type { Post } from '@utils/types';
import WidgetWrapper from '@layouts/WidgetWrapper.astro';

interface Props {
  posts: Post[];
}

const { posts } = Astro.props;
---

<WidgetWrapper>
  <h3 slot="title" class="title font-hgv-uppercase">Recent Posts</h3>
  <ul slot="content" class="content font-hgv-light" role="list">
    {
      posts.map((post: Post) => (
        <li>
          <a class="link--primary" href={`/posts/${post.data.slug}`}>
            {post.data.title}
          </a>{' '}
          on {post.data.datePublished}
        </li>
      ))
    }
  </ul>
</WidgetWrapper>

<style lang="scss">
  .title {
    font-size: var(--font-size-xs);
  }

  .content {
    font-size: var(--font-size-s);
    display: flex;
    flex-direction: column;
    gap: var(--space-10-20);
  }
</style>
