---
import type { Post } from '@utils/types';

interface Props {
  posts: Post[];
}

const { posts } = Astro.props;
---

<article class="widget">
  <header>
    <h3 class="title font-hgv-uppercase">Recent Posts</h3>
  </header>
  <div>
    <ul class="content font-hgv-light" role="list">
      {
        posts.map((post: Post) => (
          <li>
            <a class="link--primary" href={`/posts/${post.data.slug}`}>
              {post.data.title}
            </a>{' '}
            on {post.data.datePublished}
          </li>
        ))
      }
    </ul>
  </div>
</article>

<style lang="scss">
  .widget {
    display: flex;
    flex-direction: column;
    gap: var(--space-10-20);

    &:not(:last-child) {
      padding-bottom: var(--space-30-40);
      border-bottom: var(--color-bg-secondary) solid 1px;
    }
  }

  .title {
    font-size: var(--font-size-xs);
  }

  .content {
    font-size: var(--font-size-s);
    display: flex;
    flex-direction: column;
    gap: var(--space-10-20);
  }
</style>
