---
import type { NavigationItem } from 'src/utils/types';
import { TOP_NAV_LINKS } from 'src/utils/const';
---

<ul role="list" class="wrapper">
  {
    TOP_NAV_LINKS.map((item: NavigationItem) => (
      <li class="nav-item">
        <a class="link-default" href={item.url}>
          {item.title}
        </a>
      </li>
    ))
  }
</ul>

<style lang="scss">
  .wrapper {
    display: flex;
    gap: var(--space-20-30);
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: var(--space-20-30);

    &:not(:first-child) {
      &::before {
        display: block;
        content: '';
        width: var(--space-30-50);
        height: 1px;
        background: var(--color-bg-secondary);
      }
    }
  }
</style>
