---
import { Image } from 'astro:assets';
import logo from '@images/assets/logo.jpg';
---

<div class="logo">
  <a href="/">
    <Image
      class="image"
      src={logo}
      alt="Evgenii Grigorev"
      width="50"
      height="50"
      decoding="async"
      loading="eager"
    />
  </a>
  <div class="description">
    <p class="title font-medium">Evgenii Grigorev</p>
    <p class="subtitle font-italic">A Journal of the Buried Life</p>
  </div>
</div>

<style lang="scss">
  .logo {
    align-items: center;
    display: flex;
    gap: var(--space-10-20);
  }

  .image {
    aspect-ratio: 1/1;
    border-radius: 50%;
    height: auto;
    width: 50px;
  }

  .description {
    @media only screen and (width <= 768px) {
      display: none;
    }
  }

  .title {
    font-size: var(--font-size-m);
  }

  .subtitle {
    font-size: var(--font-size-s);
  }
</style>
