---
import type { NavigationItem } from 'src/utils/types';
import { FOOTER_NAV_LINKS } from 'src/utils/const';
---

<div class="wrapper font-hgv-regular">
  <div>
    <span>Â© 2025 Evgenii Grigorev</span>
  </div>
  <div>
    <ul role="list" class="items">
      {
        FOOTER_NAV_LINKS.map((item: NavigationItem) => (
          <li class="item">
            <a class="link-inverted" href={item.url}>
              {item.title}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</div>

<style lang="scss">
  .wrapper {
    padding: var(--space-30-40) 0;
    display: flex;
    justify-content: space-between;
    font-size: var(--font-size-xs);
    color: var(--color-secondary);
    line-height: 100%;

    @media only screen and (width <= 460px) {
      flex-direction: column-reverse;
      align-items: center;
      gap: 10px;
    }
  }

  .items {
    display: flex;
    gap: 5px;
  }

  .item {
    display: flex;
    align-items: center;
    gap: 5px;

    &:not(:first-child) {
      &::before {
        display: block;
        content: '|';
      }
    }
  }
</style>
