---
interface Props {
  title: string;
  datePublished: string;
}

const { title, datePublished }: Props = Astro.props;
---

<div class="page-title">
  <div class="description">
    <h1 class="description__title font-regular">{title}</h1>
    <p class="description__date font-regular">{datePublished}</p>
  </div>
</div>

<style lang="scss">
  .page-title {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: var(--space-120-160);
  }

  .description {
    display: flex;
    flex-direction: column;
    gap: var(--space-5-10);
    width: 100%;
    max-width: 600px;

    &__title {
      font-size: var(--font-size-m);
      line-height: 165%;
    }

    &__date {
      font-size: var(--font-size-xs);
      color: var(--color-secondary);
    }
  }
</style>
