---
import { Image } from 'astro:assets';

interface Props {
  src: ImageMetadata;
  description: string;
}

const { src, description } = Astro.props;
---

<div class="wrapper">
  <Image
    class="image"
    src={src}
    alt={description}
    width="696"
    height="696"
    decoding="async"
    loading="lazy"
  />
  <p class="description font-hgv-regular">{description}</p>
</div>

<style lang="scss">
  .wrapper {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .image {
    width: 100%;
    height: auto;
    aspect-ratio: auto;
  }

  .description {
    color: var(--color-secondary);
    font-size: var(--font-size-s);
  }
</style>
