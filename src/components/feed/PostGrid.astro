---
import PostCard from './PostCard.astro';
import PaginationButton from './PaginationButton.astro';
---

<section class="post-grid-wrapper">
  <div class="post-grid">
    <PostCard />
    <PostCard />
    <PostCard />
    <PostCard />
    <PostCard />
    <PostCard />
    <PostCard />
    <PostCard />
  </div>
  <div class="pagination-wrapper">
    <PaginationButton title="newer posts" url="/" />
    <PaginationButton title="older posts" url="/" />
  </div>
</section>

<style lang="scss">
  .post-grid-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-30-60);
  }

  .post-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-15-20);
    row-gap: var(--space-30-60);
  }

  .pagination-wrapper {
    display: flex;
    align-items: center;
    gap: var(--space-15-20);
  }
</style>
