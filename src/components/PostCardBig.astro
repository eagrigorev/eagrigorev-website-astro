---
import { Image } from 'astro:assets';

interface Props {
  postMeta: {
    title: string;
    slug: string;
    datePublished: string;
    excerpt: string;
    image: {
      url: {
        src: string;
        width: number;
        height: number;
        format:
          | 'png'
          | 'jpg'
          | 'jpeg'
          | 'tiff'
          | 'webp'
          | 'gif'
          | 'svg'
          | 'avif';
      };
      alt: string;
    };
    tags: string[];
  };
}

const { postMeta }: Props = Astro.props;

const postLink: string = `/posts/${postMeta.slug}`;
const tagsList: { title: string; url: string }[] = postMeta.tags.map(
  (tag: string) => {
    return {
      title: tag,
      url: `/tags/${tag.toLowerCase().replaceAll(/ /g, '-').replaceAll('&', 'and')}`,
    };
  }
);
---

<article class="post-card-wrapper">
  <div>
    <a href={postLink} tabindex={-1}>
      <Image
        class="featured-image image--default"
        src={postMeta.image.url}
        alt={postMeta.image.alt}
        width="768"
        height="768"
        decoding="async"
        loading="eager"
      />
    </a>
  </div>
  <div class="description">
    <header class="description__heading">
      <span class="description__meta font-hgv-uppercase">
        {postMeta.datePublished}
      </span>
      <h2 class="description__title font-hgv-regular">
        <a class="link--default" href={postLink}>{postMeta.title}</a>
      </h2>
    </header>
    <div class="description__excerpt font-hgv-light">
      <p>
        {postMeta.excerpt}
      </p>
    </div>
  </div>
  <div class="post-card-footer">
    <div>
      <a
        class="description__meta link--default font-hgv-uppercase"
        href={postLink}>Read more</a
      >
    </div>
    <div>
      <ul role="list" class="tags">
        {
          tagsList.map((tag: { title: string; url: string }) => (
            <li>
              <a class="tag font-hgv-regular" href={tag.url}>
                {tag.title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</article>

<style lang="scss">
  .post-card-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-30-40);

    &:not(:last-child) {
      padding-bottom: var(--space-30-40);
      border-bottom: var(--color-bg-secondary) solid 1px;
    }
  }

  .description {
    display: flex;
    flex-direction: column;
    gap: var(--space-10-20);

    &__heading {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    &__title {
      font-size: var(--font-size-xl);
    }

    &__excerpt {
      font-size: var(--font-size-s);
    }

    &__meta {
      font-size: var(--font-size-2xs);
    }
  }

  .post-card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .tags {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 15px;
  }

  .tag {
    display: block;
    padding: 5px 10px;
    border: var(--color-bg-secondary) solid 1px;
    border-radius: 20px;
    text-decoration: none;
    color: var(--color-primary);
    font-size: var(--font-size-xs);
    line-height: 100%;
    transition: border-color 0.3s;

    &:hover,
    &:focus {
      border-color: var(--color-primary);
    }
  }

  .featured-image {
    width: 100%;
    height: auto;
    aspect-ratio: auto;
  }
</style>
