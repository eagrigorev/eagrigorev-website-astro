---
import type { Post } from '@utils/types';
import { render } from 'astro:content';
import Heading2 from '@components/markdown/Heading2.astro';
import Heading3 from '@components/markdown/Heading3.astro';
import Heading4 from '@components/markdown/Heading4.astro';
import Link from '@components/markdown/Link.astro';
import PostTags from './PostTags.astro';

interface Props {
  post: Post;
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<div class="post-content-wrapper">
  <div class="post">
    <Content
      components={{
        h2: Heading2,
        h3: Heading3,
        h4: Heading4,
        a: Link,
      }}
    />
  </div>
  <div class="tags">
    <PostTags postTags={post.data.tags} />
  </div>
</div>

<style lang="scss">
  .post-content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-60-80);
  }

  .post {
    display: flex;
    flex-direction: column;
    gap: var(--space-30-40);
  }
</style>
