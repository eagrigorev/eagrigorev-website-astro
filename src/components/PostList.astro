---
import PostCardBig from './PostCardBig.astro';

const { posts } = Astro.props;
---

<section class="post-list-wrapper">
  <div>
    {posts.map((post) => <PostCardBig postMeta={post.data} />)}
  </div>
</section>

<style lang="scss">
  .post-list-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-30-40);
  }
</style>
