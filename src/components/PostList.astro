---
import type { Post } from '@utils/types';
import PostCard from './PostCard.astro';

interface Props {
  posts: Post[];
  prevPage?: string | undefined;
  nextPage?: string | undefined;
}

const { posts, prevPage, nextPage } = Astro.props;

const showPagination: string =
  prevPage == undefined && nextPage == undefined ? 'hidden' : 'pagination';

const isPrevPageAvailable: string =
  prevPage !== undefined ? 'pagination__link font-hgv-uppercase' : 'hidden';
const isNextPageAvailable: string =
  nextPage !== undefined ? 'pagination__link font-hgv-uppercase' : 'hidden';
---

<div class="post-list-wrapper">
  <div class="posts">
    {
      posts.map((post: Post, index: number) => (
        <PostCard postMeta={post.data} index={index} />
      ))
    }
  </div>
  <div class=`${showPagination}`>
    <a class={isPrevPageAvailable} href={prevPage}>Newer posts</a>
    <a class={isNextPageAvailable} href={nextPage}>Older posts</a>
  </div>
</div>

<style lang="scss">
  .post-list-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-60-80);
  }
  .posts {
    display: flex;
    flex-direction: column;
    gap: var(--space-30-40);
  }

  .pagination {
    display: flex;
    justify-content: center;
    gap: 10px;

    @media only screen and (width <= 800px) {
      flex-direction: column;
    }

    &__link {
      width: 300px;
      height: 50px;
      display: flex;
      justify-content: center;
      align-items: center;
      color: var(--color-primary);
      background: none;
      text-decoration: none;
      font-size: var(--font-size-2xs);
      border: var(--color-bg-secondary) solid 1px;
      transition: border-color 0.3s;

      &:hover,
      &:focus {
        border-color: var(--color-primary);
      }
    }
  }
</style>
