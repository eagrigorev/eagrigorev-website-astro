---
import GlobalLayout from '@layouts/GlobalLayout.astro';
import Hero from '@components/Hero.astro';
import PageTitle from '@components/PageTitle.astro';
import AboutWidget from '@components/AboutWidget.astro';
import PagesWidget from '@components/PagesWidget.astro';
import RecentPostsWidget from '@components/RecentPostsWidget.astro';
import TagsWidget from '@components/TagsWidget.astro';
import PostCardBig from '@components/PostCardBig.astro';

const pageTitle: { heading: string; subheading: string } = {
  heading: "I'm a frontend software developer based in Thessaloniki, Greece.",
  subheading:
    'I love clean and minimal interfaces, accessible homemade and local applications, and digital gardens.',
};
---

<GlobalLayout>
  <Hero />
  <PageTitle title={pageTitle} />
  <main class="content-wrapper">
    <section class="feed">
      <PostCardBig />
    </section>
    <section class="widgets">
      <AboutWidget />
      <PagesWidget />
      <RecentPostsWidget />
      <TagsWidget />
    </section>
  </main>
</GlobalLayout>

<style lang="scss">
  .content-wrapper {
    display: flex;
    gap: var(--space-30-60);
  }

  .feed {
    max-width: 768px;
  }

  .widgets {
    max-width: 300px;
    display: flex;
    flex-direction: column;
    gap: var(--space-30-40);
  }
</style>
