---
import type { PageTitleOptions } from '@utils/types';
import GlobalWrapper from '@layouts/GlobalWrapper.astro';
import PageTitle from '@components/page-title/PageTitle.astro';
import PostGrid from '@components/feed/PostGrid.astro';

const pageTitleOptions: PageTitleOptions = {
  heading: 'I am a frontend software developer based in Thessaloniki, Greece.',
  subheading:
    'I love clean and minimal interfaces, accessible homemade and local applications, and digital gardens.',
  image: {
    isVisible: true,
  },
  categories: {
    areVisible: true,
  },
  meta: {
    isVisible: false,
    datePublished: 'November 14, 1992',
    category: 'Journal',
  },
