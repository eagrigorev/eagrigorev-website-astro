---
interface Props {
  hasBottomSection: boolean;
}

const { hasBottomSection } = Astro.props;
---

<div class="markdown-wrapper">
  <div class="content">
    <slot name="content" />
  </div>
  {
    hasBottomSection ? (
      <div class="bottomSection">
        <slot name="tags" />
      </div>
    ) : null
  }
</div>

<style lang="scss">
  .markdown-wrapper {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-60-80);
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: var(--space-30-40);
  }
</style>
