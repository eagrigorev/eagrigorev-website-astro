---
import Sidebar from '@components/Sidebar.astro';
---

<main>
  <slot name="title" />
  <div class="content-wrapper">
    <div class="content font-hgv-light">
      <slot name="content" />
    </div>
    <div class="sidebar">
      <Sidebar />
    </div>
  </div>
</main>

<style lang="scss">
  .content-wrapper {
    display: flex;
    gap: var(--space-30-60);
    padding-bottom: var(--space-30-40);

    @media only screen and (width <= 800px) {
      flex-direction: column;
    }
  }

  .content {
    max-width: 800px;
    font-size: var(--font-size-m);

    @media only screen and (width <= 800px) {
      max-width: none;
    }
  }

  .sidebar {
    min-width: 180px;

    @media only screen and (width <= 800px) {
      max-width: none;
    }
  }
</style>
