---
import type { Post } from '@utils/types';
import Sidebar from '@components/Sidebar.astro';

interface Props {
  posts: Post[];
}

const { posts } = Astro.props;
---

<main>
  <slot name="title" />
  <div class="content-section">
    <div class="content">
      <slot name="content" />
    </div>
    <div class="sidebar">
      <Sidebar posts={posts} />
    </div>
  </div>
</main>

<style lang="scss">
  .content-section {
    display: flex;
    gap: var(--space-30-60);

    @media only screen and (width <= 768px) {
      flex-direction: column;
      gap: 0px;
    }
  }

  .content {
    max-width: 768px;
    min-width: 60%;
  }

  .sidebar {
    max-width: 300px;
    display: flex;
    flex-direction: column;
    gap: var(--space-30-40);

    @media only screen and (width <= 768px) {
      max-width: none;
      padding-bottom: var(--space-30-40);
    }
  }
</style>
