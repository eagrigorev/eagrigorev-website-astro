---
import type { Post } from '@utils/types';
import Sidebar from '@components/Sidebar.astro';

interface Props {
  posts: Post[];
}

const { posts } = Astro.props;
---

<main>
  <slot name="title" />
  <div class="content-section">
    <div class="content">
      <slot name="content" />
    </div>
    <div class="sidebar">
      <Sidebar posts={posts} />
    </div>
  </div>
</main>

<style lang="scss">
  .content-section {
    display: flex;
    gap: var(--space-30-60);
  }

  .content {
    max-width: 768px;
  }

  .sidebar {
    max-width: 300px;
    display: flex;
    flex-direction: column;
    gap: var(--space-30-40);
  }
</style>
